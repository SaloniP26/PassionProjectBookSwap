@model IEnumerable<PassionProjectBookSwap.Models.BookDto>
@{
    ViewBag.Title = "List";
}

<div class="col-md-2"><a href="@Url.Action("List", "Genre")" class="btn btn-primary">Back</a></div>
<div class="container">
    <h2>List</h2> 
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title"><a href="/Book/Details/@book.BookID">@book.BookName</a></h5>
                        <p class="card-text">Book Author: @book.BookAuthor</p>
                        <p class="card-text">Book Publish Date: @book.BookPublishDate</p>
                        <p class="card-text">Book Location: @book.BookLocation</p>
                        <p class="card-text">Book Caption: @book.BookCaption</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
