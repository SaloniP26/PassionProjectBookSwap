@model PassionProjectBookSwap.Models.NewUserDto

@{
    ViewBag.Title = "Delete Book";
}

<h2>Delete User</h2>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <h4>First Name: @ViewBag.FirstName</h4>
</div>

<form method="post" action="/NewUser/ConfirmDelete">
    <input type="hidden" value="@ViewBag.id" name="id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="/NewUser/List" class="btn btn-secondary">Cancel</a>
</form>
